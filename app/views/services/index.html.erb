<section class="section mt-2">
  <div class="container">
    <div class="row">
      <div class="column is-one-third">
        <% @services.each do |service| %>
          <div class="card mx-2 my-2 px-1 py-1">
            <header class="card header">
              <p class="card-header-info">
                <%= link_to service_path(service) do %>
                  <%= attachment_image_tag service, :image, size:30*30 %>
                <% end %>
                <div class="card-body">
                  <h5 class="card-text">機器：<%= service.device%></h5>
                  <p class="card-text">コメント：<%= service.body %></p>
                  <p class="card-text">投稿日時：<%= service.updated_at.strftime("%Y-%m-%d %H:%M") %></p>
                  投稿者：
                  <%= link_to user_path(service.user.id) do %>
                    <%= service.user.username %></a>さん
                  <% end %> 
                </div>  
              </p>  
            </header>
            <div class="card-content">
              <div class="content">
                <div class="content average-score">
                  <div class="star-rating-front" style="width: <%= service.review_score_percentage %>%">★★★★★</div>
                  <div class="star-rating-back">★★★★★</div>
                </div>
                <div class="average-score-display ml-3 pt-2">
                  <%= service.avg_score %>点 (<%= service.reviews.count %>件のレビュー)
                </div>
              </div>
            </div>  
            <footer class="card-footer">
              <%= link_to service_reviews_path(service), class:"button card-footer-item" do %>
                レビューを見る
              <% end %>
              <%= link_to service_path(service), class:"button card-footer-item" do %>
                レビューを書く
              <% end %>
            </footer>   
          </div>
        <% end %>  
      </div>
    </div>
  </div>
</section>
